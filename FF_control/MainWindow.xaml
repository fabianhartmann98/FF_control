<Window x:Class="FF_control.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="525"
        Background="{DynamicResource BasicBackground}"
        xmlns:visual="clr-namespace:FF_control.Visual">
    <Window.Resources>
        <ResourceDictionary Source="Visual/Styles_dict.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="asdf" Grid.Row="0"/>
        <Button Content="sdfg" Click="Button_Click" Grid.Row="1"/>
        <ComboBox Grid.Row="2">
            <ComboBoxItem Content="asdf"/> 
            <ComboBoxItem Content="qwer"/>
        </ComboBox>
        <TabControl Grid.Row="3">
            <TabItem Header="asdf" Style="{StaticResource Style_MainTabItem}">
                <ScrollViewer>
                    <visual:Connection/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="sdfg" Style="{StaticResource Style_MainTabItem}">
                <ScrollViewer>
                    <visual:Plot/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
